<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name = "orange">
        <color rgba = "1 0.3 0.1 1"/>
    </material>
    <material name = "red">
        <color rgba = "1 0 0 1"/>
    </material>
    <material name = "black">
        <color rgba = "0 0 0 1"/>
    </material>

    <!--Base linkd-->
    <link name = "base_link">

    </link>

    <!--Chassis link-->
    <joint name = "chassis_joint" type = "fixed">
        <parent link= "base_link"/>
        <child link = "chassis"/>
        <origin xyz = "-0.1 0 0"/>
    </joint>

    <link name = "chassis">
        <visual>
            <material name = "orange"/>
            <origin xyz = "0.15 0 0.075"/>
            <geometry>
                <box size = "0.35 0.3 0.15"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz = "0.15 0 0.075"/>
            <geometry>
                <box size = "0.35 0.3 0.15"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <geometry>
                <box size = "0.35 0.3 0.15"/>
            </geometry>
            <origin xyz = "0.15 0 0.075"/>
            <inertia
                ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1"
            />
        </inertial>
    </link>

    <!--Left wheel link-->
    <joint name = "left_wheel_joint" type = "continuous">
        <parent link = "chassis"/>
        <child link = "left_wheel"/>
        <origin xyz = "0.09 0.175 0" rpy = "0 0 0 "/>
        <axis xyz = "0 1 0"/>
    </joint>

    <link name = "left_wheel">
        <visual>
            <material name = "black"/>
                <origin xyz = "0 0 0" rpy= "0 ${pi/2} ${pi/2}"/>
            <geometry>
                <cylinder radius = "0.05" length = "0.04"/>
            </geometry>
        </visual>
         <collision>
                <origin xyz = "0 0 0" rpy= "0 ${pi/2} ${pi/2}"/>
            <geometry>
                <cylinder radius = "0.05" length = "0.04"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <origin xyz = "0 0 0" rpy= "0 ${pi/2} ${pi/2}"/>
            <geometry>
		        <cylinder radius = "0.05" length = "0.04"/>
	        </geometry>
            <inertia
                ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1"
            />
        </inertial>
    </link>

    <!--Right wheel link-->
    <joint name = "right_wheel_joint" type = "continuous">
        <parent link = "chassis"/>
        <child link = "right_wheel"/>
        <origin xyz = "0.09 -0.175 0" rpy = "0 0 0 "/>
        <axis xyz = "0 1 0"/>
    </joint>

    <link name = "right_wheel">
        <visual>
            <material name = "black"/>
            <origin xyz = "0 0 0" rpy= "0 ${pi/2} ${pi/2}"/>
            <geometry>
                <cylinder radius = "0.05" length = "0.04"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz = "0 0 0" rpy= "0 ${pi/2} ${pi/2}"/>
            <geometry>
                <cylinder radius = "0.05" length = "0.04"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <origin xyz = "0 0 0" rpy= "0 ${pi/2} ${pi/2}"/>
            <geometry>
		        <cylinder radius = "0.05" length = "0.04"/>
	        </geometry>
            <inertia
                ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1"
            />
        </inertial>
    </link>

    <!--Caster wheel link-->
    <joint name = "caster_wheel_joint" type = "fixed">
        <parent link= "chassis"/>
        <child link = "caster_wheel"/>
        <origin xyz = "0.24 0 0"/>
    </joint>

    <link name = "caster_wheel">
        <visual>
            <material name = "black"/>
            <geometry>
                <sphere radius = "0.05"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius = "0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <origin xyz="0 0 0" rpy="0 0 0 "/>
            <geometry>
		        <sphere radius = "0.05"/>
	        </geometry>
            <inertia
                ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1"
            />
        </inertial>
    </link>

    <!--Tower link-->
    <joint name = "tower_joint" type = "fixed">
        <parent link = "chassis"/>
        <child link = "tower"/>
        <origin xyz = "0.19 0.0 0.15"/>
    </joint>

    <link name = "tower">
        <visual>
            <material name = "red"/>
            <geometry>
                <cylinder radius = "0.05" length = "0.18"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.05" length = "0.18"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0 0 0" rpy="0 0 0"/> 
            <geometry>
                <cylinder radius = "0.05" length = "0.18"/>
            </geometry>
            <inertia
                ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1"
            />
        </inertial>
    </link>

    <!--Holder link-->
    <joint name = "holder_joint" type = "fixed">
        <parent link= "chassis"/>
        <child link = "holder"/>
        <origin xyz = "0.24 0 0.15"/>
    </joint>

    <link name = "holder">
        <visual>
            <material name = "red"/>
            <geometry>
                <box size = "0.1 0.05 0.1"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size = "0.1 0.05 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0 0 0" rpy="0 0 0"/> 
            <geometry>
                <box size = "0.1 0.05 0.1"/>
            </geometry>
            <inertia
                ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1"
            />
        </inertial>
    </link>
</robot>